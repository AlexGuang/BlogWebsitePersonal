
<%- include("partials/header"); -%>
    <h1>Compose</h1>
    <form class="" action="/compose" method="post">
      <div class="form-group">
       
        <label>Title</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <input name="subject" class="input-right" id="type" type="text" list="typelist" placeholder="Please choose subject">
        <datalist id="typelist">
          <option>HTML</option>
          <option>CSS</option>
          <option>Javascript</option>
          <option>Node.js</option>
          <option>EJS</option>
          <option>React.js</option>
          <option>MongoDB</option>
          <option>AWS Cloud Service</option>
          <option>C#</option>
          <option>.Net</option>
          <option>MS SQLServer</option>
          <option>HTTP</option>
          <option>UNITY3D</option>
          <option>Data Structures and Algorithms</option>
        </datalist>
        <input class="form-control" type="text" name="postTitle">
        <label>Post</label>
        <textarea class="form-control" name="postBody" rows="5" cols="30"></textarea>
      </div>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </form>

<%- include("partials/footer"); -%>
